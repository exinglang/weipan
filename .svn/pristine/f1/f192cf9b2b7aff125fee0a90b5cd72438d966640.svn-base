<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <Button
        android:id="@+id/bt_zhang"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="40dip"
        android:background="@drawable/home_bt_selector_zhang"
        android:text="@string/maizhang"

        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_die"
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_marginLeft="5dip"
        android:layout_weight="1"

        android:layout_toRightOf="@id/bt_zhang"
        android:background="@drawable/home_bt_selector_die"
        android:text="@string/maidie"

        android:textColor="@color/white" />

</LinearLayout>