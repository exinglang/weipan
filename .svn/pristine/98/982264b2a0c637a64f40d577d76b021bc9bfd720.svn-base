<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical"
    tools:context="com.puxtech.weipan.activity.TabHomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称" />
    </LinearLayout>

    <LinearLayout style="@style/geren_ll">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/user_file_text_o"
                android:gravity="center_vertical"
                android:text="身份证号" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:background="@color/common_devider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user_mobile"
                android:gravity="center_vertical"

                android:text="手机号" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_marginLeft="3dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_zhanghuxinxi"
        style="@style/geren_ll"
        android:layout_marginTop="@dimen/common_row_margin">

        <TextView
            style="@style/geren_ll_left_text"
            android:drawableLeft="@drawable/user_th_large"

            android:text="账户信息" />

        <TextView
            android:id="@+id/tv_info"
            style="@style/geren_ll_left_text"
            android:layout_toLeftOf="@id/iv_1"

             />

        <ImageView
            android:id="@+id/iv_1"
            style="@style/geren_ll_right_img" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_inout"

        style="@style/geren_ll"
        android:layout_marginTop="1dip">

        <TextView
            style="@style/geren_ll_left_text"
            android:drawableLeft="@drawable/user_credit_card"
            android:text="充值提现" />

        <TextView
            android:id="@+id/tv_inout"
            style="@style/geren_ll_left_text"
            android:layout_toLeftOf="@id/iv_2"

            />

        <ImageView
            android:id="@+id/iv_2"
            style="@style/geren_ll_right_img" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/geren_ll"
        android:layout_marginTop="1dip">

        <TextView
            style="@style/geren_ll_left_text"
            android:drawableLeft="@drawable/user_bookmark"
            android:text="账户安全" />

        <TextView
            android:id="@+id/tv_safe"
            style="@style/geren_ll_left_text"
            android:layout_toLeftOf="@id/iv_3"

             />

        <ImageView
            android:id="@+id/iv_3"
            style="@style/geren_ll_right_img" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sysinfo"

        style="@style/geren_ll"

        android:layout_marginTop="1dip">

        <TextView
            style="@style/geren_ll_left_text"
            android:drawableLeft="@drawable/user_envelope"
            android:text="系统消息" />

        <TextView
            android:id="@+id/tv_sysinfo"
            style="@style/geren_ll_left_text"
            android:layout_toLeftOf="@id/iv_4"
            />

        <ImageView
            android:id="@+id/iv_4"
            style="@style/geren_ll_right_img" />
    </RelativeLayout>

</LinearLayout>
